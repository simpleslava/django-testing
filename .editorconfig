# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

# Ограничение длины строки
max_line_length = 79

[*.py]
# Для Python-файлов
indent_style = space
indent_size = 4
max_line_length = 79
